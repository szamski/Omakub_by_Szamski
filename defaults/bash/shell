# History control
shopt -s histappend
HISTCONTROL=ignoreboth
HISTSIZE=32768
HISTFILESIZE="${HISTSIZE}"

# Autocompletion
if [[ -f /usr/share/bash-completion/bash_completion ]]; then
  source /usr/share/bash-completion/bash_completion
fi

# Set complete path
export PATH="./bin:$HOME/.local/bin:$HOME/.local/share/omakub-szamski/bin:$PATH"
set +h

export OMAKUB_SZAMSKI_PATH="$HOME/.local/share/omakub-szamski"